                                    <a href="/favori/ajouter/{{site.id}}" class="LiensFavori" id="AjoutFavori">
                                        <img src="{{asset('IMG/ICONES/PasFavori.png')}}" alt="ajout aux favoris" class="IconesFavoris" id="CoeurVide">
