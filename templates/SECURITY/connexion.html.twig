{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block javascripts %}<script src="{{asset('JS/Inscription.js')}}"></script>{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{asset('CSS/Connexion.css')}}">{% endblock %}

{% block body %}
    <!-- TITRE -->

        <h2>Connectez-vous</h2>
        <hr>

    <!-- FORM -->

        <form method="POST">

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <!-- GROUPE 1 -->

                <div class="DivFormulaireGroupe" id="Groupe1">

                    <!-- EMAIL -->

                        <label for="inputEmail" class="DecalerLabel">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="StyleInput" autocomplete="email" onkeyup="deplaceLabel(this)" required autofocus>

                    <!-- MOT DE PASSE -->

                        <label for="inputPassword" class="DecalerLabel">Mot De Passe</label>
                        <div class="AlignementMotDePasse">
                            <input type="password" name="password" id="inputPassword" class="StyleMotDePasse" autocomplete="current-password" onkeyup="deplaceLabel(this)" required>
                            <div class="AffichageMotDePasse" onclick="toggleType('ConnexionMotDePasse')">
                                <img src="/IMG/ICONES/hide.png" alt="afficher" id="AfficherMotDePasse">
                                <img src="/IMG/ICONES/show.png" alt="cacher" id="CacherMotDePasse">
                            </div>
                        </div>
                        <a href="/oubli" class="LienRedirection">Mot de passe oubli√© ?</a>

                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <!-- GROUPE BOUTONS -->
            
                <div id="DivBoutonsEtapes">
                    <input type="submit" value="Valider" id="BoutonValider">
                </div>
            
            <p class="LienRedirection">Pas encore de compte ? <a href="/inscription">Inscrivez-vous</a> !</p>

        </form>

{% endblock %}
