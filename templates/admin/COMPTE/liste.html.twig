{% extends 'admin/index.html.twig' %}

{% block admin %}
    <div id="GroupeListeutilisateur">
        <h2>Liste des Comptes</h2>
        <table class="TableauListe">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Sexe</th>
                    <th>Date de naissance</th>
                    <th>Email</th>
                    <th>Pseudo</th>
                    <th>Photo de Profil</th>
                    <th>Droits</th>
                    <th>Date de Creation du Compte</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>
            </thead>
            <tbody>
                {% for utilisateur in liste %}
                    <tr>
                        <td>{{utilisateur.id}}</td>

                        <td>{{utilisateur.prenom}}</td>
                        <td>{{utilisateur.nom}}</td>
                        <td>{{utilisateur.sexe}}</td>
                        <td>{{utilisateur.datedenaissance | date('d-m-Y')}}</td>
                        <td>{{utilisateur.email}}</td>
                        <td>{{utilisateur.pseudo}}</td>
                        <td>{{utilisateur.photodeprofil}}</td>
                        <td>
                            {% for roles in utilisateur.roles %}
                                {% if roles is same as ('ROLE_ADMIN') %}
                                    Administrateur
                                {% elseif roles is same as ('ROLE_USER') %}
                                    Utilisateur
                                {% else %}
                                    Problème avec l'utilisateur.<br>
                                    action reuqise !
                                {% endif %}
                            {% endfor %}
                        </td>
                        <td>{{utilisateur.datedecreationducompte | date('d-m-Y')}}</td>
                        <td>
                            <a href="/admin/compte/modifier/{{utilisateur.id}}">
                                <img src="{{asset('IMG/ICONES/Modifier.png')}}" alt="modifier" class="Icone">
                            </a>
                        </td>
                        <td>
                            <a  onclick="suppressionElement({{utilisateur.id}})">
                                <img src="{{asset('IMG/ICONES/Supprimer.png')}}" alt="supprimer" class="Icone">
                            </a>
                        </td>
                    </tr>
                    <div class="BlocSupprimer Hide" id="Bloc{{utilisateur.id}}">
                        <h3>ATTENTION !</h3>
                        <p>
                            Cette action est irréversible.<br>
                            Voulez-vous supprimer le compte "{{utilisateur.id}}".
                        </p>
                        <div class="BlocButtons">
                            <a href="/admin/compte/supprimer/{{utilisateur.id}}" class="ButtonSupprimer">OUI</a>
                            <a onclick="suppressionElement({{utilisateur.id}})" class="ButtonSupprimer">NON</a>
                        </div>
                    </div>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Sexe</th>
                    <th>Date de naissance</th>
                    <th>Email</th>
                    <th>Pseudo</th>
                    <th>Photo de Profil</th>
                    <th>Droits</th>
                    <th>Date de Creation du Compte</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>
            </tfoot>
        </table>
    </div>
{% endblock %}