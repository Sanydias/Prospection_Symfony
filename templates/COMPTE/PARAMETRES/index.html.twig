{% extends 'compte/compte.html.twig' %}

{% block compte %}
    <div class="BlocSupprimer Hide">
        <h3>ATTENTION !</h3>
        <p>
            Cette action est irréversible.<br>
            Voulez-vous supprimer votre compte.
        </p>
        <div class="BlocButtons">
            <a href="/compte/parametres/suppression/{{ app.user.id }}" class="ButtonSupprimer">OUI</a>
            <a onclick="suppressionCompte()" class="ButtonSupprimer">NON</a>
        </div>
    </div>
    <div class="GroupeParametres">
        <div class="MenuParametres">
            <a href="/compte/parametres/preference" {% if app.request.get('_route') == "app_preference" %}class="SelectedPage"{% endif %} >
                Préférences de recherche
            </a>
            <a href="/compte/parametres/accessibilite" {% if app.request.get('_route') == "app_accessibilite" %}class="SelectedPage"{% endif %} >
                Accessibilité
            </a>
            <a href="/compte/parametres/confidentialite" {% if app.request.get('_route') == "app_confidentialite" %}class="SelectedPage"{% endif %} >
                Confidentialité
            </a>
            <a href="/compte/parametres/modification/{{ app.user.id }}" {% if app.request.get('_route') == "app_modification_compte" %}class="SelectedPage"{% endif %} >
                Modification du Compte
            </a>
            <a onclick="suppressionCompte()">
                Supprimer le Compte
            </a>
        </div>
        <div class="ContenuParametres">
            {% block parametres %}{% endblock %}
        </div>
    </div>
{% endblock %} 
