{% extends 'compte/compte.html.twig' %}

{% block compte %}
    <div class="GroupeProfil">
        <div class="LigneProfil">
            <div class="PPProfil">
                {% if app.user.photodeprofil %}
                    <img src="{{asset('IMG/PP/'~  app.user.photodeprofil)}}" alt="photo de profil utilisateur" onload="resizeIconeHeader(this)">
                {% else %}
                    <img src="{{asset('IMG/ICONES/utilisateur.png')}}" alt="photo de profil utilisateur" onload="resizeIconeHeader(this)">
                {% endif %}
            </div>
            <p class="PseudoProfil">
                {{ app.user.pseudo }}
            </p>
        </div>
        <hr>
        <div class="ColonneProfil">
            <h2>Informations Compte</h2>
            <p>
                Email : {{ app.user.email }}
            </p>
            {% if is_granted('ROLE_ADMIN') %}
                <p>
                    Droit : Administrateur
                </p>
            {% endif %}
            <p>
                Date de creation du compte : {{ app.user.datedecreationducompte | date('d-m-Y') }}
            </p>
        </div>
        <hr>
        <div class="ColonneProfil">
            <h2>Informations Personnels</h2>
            {% if app.user.prenom %}
                <p>
                    Pr√©nom :{{ app.user.prenom }}
                </p>
            {% endif %}
            {% if app.user.nom %}
                <p>
                    NOM : {{ app.user.nom }}
                </p>
            {% endif %}
            {% if app.user.sexe %}
                <p>
                    Sexe : {{ app.user.sexe }}
                </p>
            {% endif %}
            <p>
                Date de naissance : {{ app.user.datedenaissance | date('d-m-Y') }}
            </p>
        </div>
    </div>
{% endblock %} 
